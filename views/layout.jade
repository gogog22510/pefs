include ./mixin
doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    +viewport
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description' content='myapp')
    meta(name='author' content='Charles Tsai')

    title= title

    // Bootstrap core CSS
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    // Bootstrap theme
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    link(rel='stylesheet', href='/css/ie10-viewport-bug-workaround.css')

    // Custom styles for this template
    link(rel='stylesheet', href='/css/style.css')

    // Just for debugging purposes. Don't actually copy these 2 lines!
    <!--[if lt IE 9]><!-->
    script(src='/js/ie8-responsive-file-warning.js')
    <!--<![endif]-->
    script(src='/js/ie-emulation-modes-warning.js')

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    <!--[if lt IE 9]>
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    <![endif]-->

  body(role='document')
    include ./nav.jade
    div(class='container theme-showcase', role='main')
      block content
    include ./footer.jade

    // 
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script window.jQuery || document.write('<script src="/js/vendor/jquery.min.js"><\/script>')
    script(src='/js/bootstrap.min.js')
    script(src='/js/docs.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='/js/ie10-viewport-bug-workaround.js')
    // For LiveReload
    script document.write('<script src="http://'+window.location.hostname+':35729/livereload.js"><\/script>')
